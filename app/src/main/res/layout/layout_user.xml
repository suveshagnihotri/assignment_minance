<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/parentview"
    app:cardElevation="@dimen/dp_16"
    android:layout_margin="@dimen/dp_16">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.suvesh.utils.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/userImage"
                    android:layout_weight="1.3"
                    android:text="Suvesh"
                    android:textSize="@dimen/sp_20"
                    app:font="normal" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/dp_4"
                        android:src="@drawable/time" />

                    <com.suvesh.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="justnow"
                        android:textColor="@color/grey6"
                        app:font="normal" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:orientation="vertical">

        <com.suvesh.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            app:font="normal"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="Suvesh has commented in this post" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/sp_16"
            android:background="@color/grey10"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:padding="@dimen/dp_20"
        android:orientation="horizontal">

        <com.suvesh.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="3" />

        <com.suvesh.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="Likes"
            app:font="normal"
            android:textAllCaps="true"
            android:textColor="@color/light_gray"
            android:layout_marginLeft="@dimen/dp_8"/>

        <com.suvesh.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="1" />


        <com.suvesh.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="Reply"
            app:font="normal"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@color/light_gray"/>

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
